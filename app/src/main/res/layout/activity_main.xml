<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_curr_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/ruler_view"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_marginBottom="50dp"
        tools:text="155555"/>

    <com.wh.timeruler.RulerView
        android:id="@+id/ruler_view"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:background="#80000000"
        android:layout_centerVertical="true"
        app:centerLineColor="#FFFF4545"
        app:centerLineWidth="1dp"
        app:drawDownLine="false"
        app:drawDownRuler="true"
        app:drawUpLine="false"
        app:drawUpRuler="false"
        app:largeRulerColor="#ffffffff"
        app:rulerHeightBig="10dp"
        app:rulerHeightSamll="6dp"
        app:rulerWidthBig="1dp"
        app:rulerWidthSamll="1dp"
        app:smallRulerColor="#4cffffff"
        app:textColor="#ffffffff"
        app:textMarginBottom="6dp"
        app:textSize="10sp"
        app:upAndDownLineColor="#4cffffff"
        app:upAndDownLineWidth="1dp" />

</RelativeLayout>